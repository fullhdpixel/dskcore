{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": true,
    "strict": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "alwaysStrict": false
  },
  "include": [
    "@constants",
    "@interfaces",
    "@types"
  ],
  "exclude": [
    "*/node_modules/*",
    "../../node_modules/*",
    "dist"
  ]
}